rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Anyone can read (required for username-based login)
      allow read: if true;
      
      // Anyone can create/update/delete users
      // (Application-level security is handled in the app code)
      allow create, update, delete: if true;
    }
    
    // Complaints collection
    match /complaints/{complaintId} {
      // Anyone can read/write
      // (Application-level security is handled in the app code)
      allow read, write: if true;
    }
    
    // Logs collection
    match /logs/{logId} {
      // Anyone can read
      allow read: if true;
      
      // Anyone can create logs
      allow create: if true;
      
      // No one can update/delete logs
      allow update, delete: if false;
    }
    
    // Counters collection
    match /counters/{counterId} {
      // Anyone can read/write
      allow read, write: if true;
    }
  }
}
